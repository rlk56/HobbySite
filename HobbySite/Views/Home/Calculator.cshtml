
<body>
    <div class="calculator">
        <h2>Mentoring Cost Calculator</h2>
        <label for="hours">Number of Hours Needed:</label>
        <br>
        <input type="number" id="hours" min="1" step="1">
        <br>
        <label for="rate">Hourly Rate:</label>
        <br>
        <input type="text" id="rate" value="$15" readonly>
        <br>
        <label for="total">Total:</label>
        <br>
        <input type="text" id="total" readonly>
        <br>
        <br>
        <button id="calculateBtn">Calculate Total</button>
    </div>

    <script src="~/js/site.js"></script>
</body>